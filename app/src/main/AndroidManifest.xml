<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.stiliyan.phonebook.phonebook">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddClientActivity"
            android:label="@string/title_activity_add_contact"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddCustomerActivity"
            android:label="@string/title_activity_add_customer"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddCarActivity"
            android:label="@string/title_activity_add_caractivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".AddSaleActivity" />
        <activity
            android:name=".AddActivity"
            android:label="@string/title_activity_add"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ViewSalesActivity"
            android:label="@string/title_activity_view_sales"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EditSaleActivity"
            android:label="@string/title_activity_edit_sale"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>